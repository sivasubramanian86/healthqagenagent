{
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/fhir/summary",
        "function": "fhirSummary"
      },
      {
        "source": "/api/tests/generate",
        "function": "generateTests"
      },
      {
        "source": "/api/tests/results",
        "function": "testResults"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
  ,
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  }
}
