{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/dashboard",
        "destination": "/dummy-data/dashboard.json"
      },
      {
        "source": "/api/fhir/summary",
        "destination": "/dummy-data/fhir_summary.json"
      },
      {
        "source": "/api/tests/generate",
        "destination": "/dummy-data/generate_tests.json"
      },
      {
        "source": "/api/tests/results",
        "destination": "/dummy-data/test_results.json"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}